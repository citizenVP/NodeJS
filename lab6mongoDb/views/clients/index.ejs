<%- include('../layout/header.ejs'); %>
  <h1 class="text-center"><a href="/client">Clients</a></h1>
  <table class="table">
      <thead>
          <tr class="text-center">
              <form action="/search" method="post">
                  <div class="inline-group">
                          <input type="hidden" name="tag" value="clients">
                      <th><input class="form-control" name="search" value="" placeholder="Search" required></th>
                    
                  </div>
              </form>
          </tr>
      </thead>
      <tbody>
      </tbody>
  </table>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="text-center">FirstName</th>
        <th class="text-center">LastName</th>
        <th class="text-center">Phone</th>
        <th class="text-center">Adress</th>
        <th ><button type="button" class="btn btn-success" style="width: 100%" data-toggle="modal" data-target="#exampleModal">
            Add New
          </button></th>
      </tr>
    </thead>
    <tbody>
      <% clients.forEach(function(client){ %>
      <tr>

        <td class="text-center">
          <%= client.FirstName %>
        </td>
        <td class="text-center">
          <%= client.LastName %>
        </td>
        <td class="text-center">
          <%= client.Phone %>
        </td>
        <td class="text-center">
          <%= client.Adress %>
        </td>
        <td class="text-center">
            <a href="/client/delete/<%=client._id %>" class="material-icons">delete_forever</a>
            <a href="/client/edit/<%=client._id %>" class="material-icons">edit</a>
        </td>
      </tr>
      <% }) %>

    </tbody>
  </table>

  <%- include('../clients/create'); %>
  <%- include('../layout/footer.ejs'); %>